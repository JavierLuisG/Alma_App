<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/theme_gradients_background"
    tools:context=".view.ui.activities.RegistroActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="334dp"
        android:layout_height="226dp"
        android:layout_marginTop="30dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logonegroalma" />

    <TextView
        android:id="@+id/textRegistro"
        android:layout_width="219dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/opensanslight"
        android:gravity="center"
        android:text="@string/registro"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/Bfondo"
        android:layout_width="335dp"
        android:layout_height="415dp"
        android:background="@drawable/theme_background_fondo_gris"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textRegistro"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/Registroaddress"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/styloredondo_text"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/opensanslight"
        android:hint="@string/correo"
        android:textSize="20dp"
        android:textStyle="bold"
        android:inputType="textEmailAddress"

        app:layout_constraintEnd_toEndOf="@+id/Bfondo"
        app:layout_constraintStart_toStartOf="@+id/Bfondo"
        app:layout_constraintTop_toTopOf="@+id/Bfondo" />

    <EditText
        android:id="@+id/Registrociudad"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/styloredondo_text"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/opensanslight"
        android:hint="@string/ciudad"
        android:textSize="20dp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="@+id/Bfondo"
        app:layout_constraintStart_toStartOf="@+id/Bfondo"
        app:layout_constraintTop_toBottomOf="@+id/Registroaddress" />

    <EditText
        android:id="@+id/Registrodireccion"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/styloredondo_text"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/opensanslight"
        android:hint="@string/direccion"
        android:textSize="20dp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="@+id/Bfondo"
        app:layout_constraintStart_toStartOf="@+id/Bfondo"
        app:layout_constraintTop_toBottomOf="@+id/Registrociudad" />

    <EditText
        android:id="@+id/Registrotelefono"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/styloredondo_text"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/opensanslight"
        android:hint="@string/telefono"
        android:textSize="20dp"
        android:textStyle="bold"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="@+id/Bfondo"
        app:layout_constraintStart_toStartOf="@+id/Bfondo"
        app:layout_constraintTop_toBottomOf="@+id/Registrodireccion" />

    <EditText
        android:id="@+id/Registropassword"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/styloredondo_text"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/opensanslight"
        android:hint="@string/password"
        android:textSize="20dp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="@+id/Bfondo"
        app:layout_constraintStart_toStartOf="@+id/Bfondo"
        app:layout_constraintTop_toBottomOf="@+id/Registrotelefono"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/Rregistro"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/purple_dark"
        android:fontFamily="@font/opensanslight"
        android:text="@string/registrarse"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="@+id/Bfondo"
        app:layout_constraintStart_toStartOf="@+id/Bfondo"
        app:layout_constraintTop_toBottomOf="@+id/Registropassword" />

</androidx.constraintlayout.widget.ConstraintLayout>