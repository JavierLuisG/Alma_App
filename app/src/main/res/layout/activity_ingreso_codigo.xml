<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.activities.IngresoCodigoActivity"
    android:background="@drawable/theme_gradients_background">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="334dp"
        android:layout_height="226dp"
        android:layout_marginTop="30dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logonegroalma" />

    <TextView
        android:id="@+id/textRestablecerpassword"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:text="@string/enviarcodigo"
        android:fontFamily="@font/opensanslight"
        android:gravity="center"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/black"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView" />

    <TextView
        android:id="@+id/Infondo"
        android:layout_width="335dp"
        android:layout_height="323dp"
        android:background="@drawable/theme_background_fondo_gris"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textRestablecerpassword"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/InPassword"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/styloredondo_text"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/opensanslight"
        android:hint="@string/newpassword"
        android:textSize="20dp"
        android:textStyle="bold"
        android:inputType="textEmailAddress"

        app:layout_constraintEnd_toEndOf="@+id/Infondo"
        app:layout_constraintStart_toStartOf="@+id/Infondo"
        app:layout_constraintTop_toTopOf="@+id/Infondo"  />

    <EditText
        android:id="@+id/InConfirmPassword"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/styloredondo_text"
        android:backgroundTint="@color/white"
        android:hint="@string/confirmnewpassword"
        android:fontFamily="@font/opensanslight"
        android:textSize="20dp"
        android:textStyle="bold"
        android:inputType="textEmailAddress"

        app:layout_constraintEnd_toEndOf="@id/Infondo"
        app:layout_constraintStart_toStartOf="@id/Infondo"
        app:layout_constraintTop_toBottomOf="@id/InPassword" />

    <TextView
        android:id="@+id/InIngresarCodigo"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/styloredondo_text"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/opensanslight"
        android:gravity="center"
        android:hint="@string/ingresarcodigo"
        android:textSize="22dp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="@id/Infondo"
        app:layout_constraintStart_toStartOf="@id/Infondo"
        app:layout_constraintTop_toBottomOf="@id/InConfirmPassword" />

    <Button
        android:id="@+id/InConfirmar"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/purple_dark"
        android:fontFamily="@font/opensanslight"
        android:text="Confirmar"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="@+id/Infondo"
        app:layout_constraintStart_toStartOf="@+id/Infondo"
        app:layout_constraintTop_toBottomOf="@+id/InIngresarCodigo" />

</androidx.constraintlayout.widget.ConstraintLayout>

