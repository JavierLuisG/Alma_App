<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2A4FF"
    tools:context=".view.ui.activities.LoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="205dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="64dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="602dp"
        android:src="@drawable/logoflorabajo" />

    <ImageView
        android:id="@+id/Bfondo"
        android:layout_width="wrap_content"
        android:layout_height="336dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="336dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="192dp"
        android:background="@drawable/fondoblanco"
        android:backgroundTint="#7CD9DCE0" />

    <Button
        android:id="@+id/Biniciar"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="496dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="320dp"
        android:background="@drawable/styloredondo_button"
        android:fontFamily="@font/opensanslight"
        android:text="@string/iniciarsesion"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:backgroundTint="@color/yellow_button" />


    <EditText
        android:id="@+id/Bcorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="355dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="462dp"
        android:background="@drawable/styloredondo_text"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:fontFamily="@font/opensanslight"
        android:hint="@string/correo"
        android:inputType="textEmailAddress"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/Bpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="417dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="400dp"
        android:background="@drawable/styloredondo_text"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:fontFamily="@font/opensanslight"
        android:hint="@string/password"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/Brecuperar"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="159dp"
        android:layout_marginTop="556dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="286dp"
        android:fontFamily="@font/opensanslight"
        android:text="@string/recuperar"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Bregistrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="79dp"
        android:layout_marginTop="592dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="224dp"
        android:background="@drawable/styloredondo_button"
        android:fontFamily="@font/opensanslight"
        android:text="@string/registrarse"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:backgroundTint="@color/yellow_button" />


</RelativeLayout>