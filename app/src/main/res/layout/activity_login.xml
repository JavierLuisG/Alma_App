<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/theme_gradients_background"
    tools:context=".view.ui.activities.LoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="334dp"
        android:layout_height="226dp"
        android:layout_marginTop="30dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logonegroalma" />

    <ImageView
        android:id="@+id/Bfondo"
        android:layout_width="335dp"
        android:layout_height="363dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/theme_background_fondo_gris"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/Loginaddress"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/styloredondo_text"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/opensanslight"
        android:hint="@string/correo"
        android:textSize="20dp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="@+id/Bfondo"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/Bfondo"
        app:layout_constraintTop_toTopOf="@+id/Bfondo" />

    <EditText
        android:id="@+id/Loginpassword"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/styloredondo_text"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/opensanslight"
        android:hint="@string/password"
        android:textSize="20dp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="@+id/Bfondo"
        app:layout_constraintStart_toStartOf="@+id/Bfondo"
        app:layout_constraintTop_toBottomOf="@+id/Loginaddress" />

    <Button
        android:id="@+id/Biniciar"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/purple_dark"
        android:fontFamily="@font/opensanslight"
        android:text="@string/iniciarsesion"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="@+id/Bfondo"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="@+id/Bfondo"
        app:layout_constraintTop_toBottomOf="@+id/Loginpassword" />

    <TextView
        android:id="@+id/Brecuperar"
        android:layout_width="233dp"
        android:layout_height="26dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/opensanslight"
        android:text="@string/recuperar"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="@+id/Bfondo"
        app:layout_constraintHorizontal_bias="0.686"
        app:layout_constraintStart_toStartOf="@+id/Bfondo"
        app:layout_constraintTop_toBottomOf="@+id/Biniciar" />

    <Button
        android:id="@+id/Bregistrar"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/purple_dark"
        android:fontFamily="@font/opensanslight"
        android:text="@string/registrarse"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/Bfondo"
        app:layout_constraintStart_toStartOf="@+id/Bfondo"
        app:layout_constraintTop_toBottomOf="@+id/Brecuperar" />


</androidx.constraintlayout.widget.ConstraintLayout>